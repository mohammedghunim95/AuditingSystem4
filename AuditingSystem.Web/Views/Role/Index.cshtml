@model IEnumerable<Role>
@{
    ViewData["DeleteTitle"] = "roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4 class="card-title">Role Management View</h4>
                    </div>
                    <div class="col-md-6 text-end">
                        <a class="btn btn-primary me-2" href="~/Role/Add">
                            <i class="fa-solid fa-plus"></i> Add New Role
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="tableList" class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Descripition</th>
                                <th colspan="2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="tr">
                                    <td>@item.Name</td>
                                    <td>@Html.Raw(item.Description)</td>
                                    <td>
                                        <a asp-action="Edit" asp-controller="Role" asp-route-id="@item.Id" title="Edit"><i class="fa-solid fa-pen-to-square"></i></a>
                                    </td>
                                    <td>
                                        <a data-actions-id="@item.Id" title="Delete" id="btnDelete" href="#"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
